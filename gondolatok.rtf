\par \pard\plain \s0\ql\ltrpar\nowidctlpar{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\cf1\kerning1\hich\af4\langfe1081\dbch\af4\afs24\lang1081\loch\f4\fs24\lang1038\li0\ri0\lin0\rin0\fi113\sb0\sa113{\rtlch \ltrch\loch
